{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sc2rep-frontend",
  "version": "0.1.0",
  "identifier": "com.altria.sc2repshell",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Your App Title",
        "width": 1024,
        "height": 768,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "bin/main.exe",
      "bin/"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
